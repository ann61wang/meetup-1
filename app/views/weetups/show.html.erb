<div class="col-md-12">
  <div class="weetup">

    <%= link_to("留言", new_weetup_comment_path(@weetup), class: "btn btn-default pull-right")%>

    <% if current_user && current_user == @weetup.user %>
    <%= link_to("Edit", edit_weetup_path(@weetup), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @weetup.title %></h2>
  <p><%= @weetup.description %></p>
  </div>

  <% if @weetup.comments.empty? %>
  <p> 尚未有人留言 </p>
<% else %>
  <% @floor = 1 %>
  <% @weetup.comments.each do |comment| %>
    <%= @floor %>樓
    <div class="col-md-12">
      <p><%= comment.content %></p>
    </div>
    <% @floor = @floor + 1 %>
    </br>
  <% end%>
<% end %>

<%= render 'comment_form' %>
